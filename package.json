{
  "name": "vehicle-insurance-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "common",
    "frontend"
  ],
  "scripts": {
    "install": "npm install --ignore-scripts",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\" \"docker-compose up -d\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm run start:dev"
  },
  "devDependencies": {
    "concurrently": "^6.4.0"
  }
}
